<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f6f7f8"
    android:orientation="vertical">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bookinfotopground"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp">

        <com.estone.bank.estone_appsmartlock.costum.CircleImageView
            android:id="@+id/imageView_lookinfohead"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@mipmap/housedetal_uesrdefaultpic"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/tv_canlookimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gatewayonlicestuts"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="查看"
            android:textColor="#fff"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/imageView_lookinfohead"
            app:layout_constraintLeft_toLeftOf="@+id/imageView_lookinfohead"
            app:layout_constraintRight_toRightOf="@+id/imageView_lookinfohead" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="60dp"
            android:gravity="center"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="12dp">

                <LinearLayout
                    android:id="@+id/lly_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_lookInfo_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:text=""
                        android:textColor="#595959"
                        android:textSize="14sp" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/textView_lookInfo_cardid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="45487985"
                        android:textColor="#595959"
                        android:textColorHint="#e7b67b"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/admin_tagpic"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/user_signpic"
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:visibility="gone" />
                </LinearLayout>


                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lly_name"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/textView_lookinfo_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginBottom="0dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="0dp"
                        android:text="时间"
                        android:textColor="#8C8C8C"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/icon_lookinfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="0dp"
                            android:textColor="#c6c6c6"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/icon_lookinfo_opentype"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="0dp"
                            android:text="密码开门"
                            android:textColor="#c6c6c6"
                            android:textSize="12sp" />

                    </LinearLayout>


                </RelativeLayout>


            </RelativeLayout>

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>


</LinearLayout>
