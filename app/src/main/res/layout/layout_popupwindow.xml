        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="2dp"
        android:background="#EDEDED"
        android:gravity="center"
        android:text="拍照"
        android:textColor="@color/a595959"
        android:textSize="18sp" />

    <!--<View-->
    <!--android:layout_width="match_parent"-->
